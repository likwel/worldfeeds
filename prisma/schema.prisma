generator client {
  provider = "prisma-client-js"
  //output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          String    @id @default(cuid())
  uniqueId    String    @unique // hash de link+pubDate pour éviter doublons
  source      String
  title       String
  link        String
  summary     String?   // description du flux RSS
  creator     String?   // dc:creator
  categories  String?   // stocké en CSV
  enclosureUrl String?  // item.enclosure?.url
  enclosureType String? // item.enclosure?.type
  enclosureLength String? // item.enclosure?.length
  thumbnail   String?   // media:thumbnail
  imageUrl    String?   // ogImage ou image fallback
  publishedAt DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([publishedAt])
  @@index([source, publishedAt])
}